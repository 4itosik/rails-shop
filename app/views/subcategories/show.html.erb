<div class="row">
	<%= link_to 'Все подкатегории', root_url%> / <%=link_to @category.name, category_path(@category.alias)%> / <%= @subcategory.name%>
</div>
<div class="row">
<% howelementsinrow = 0%>
<% @products.each do |product|%>
	<div class="col-lg-4">
		<%= product.name%><br>
		<%= product.price%><br>
		<%= link_to product.alias, product_path(:category => @category.alias, :subcategory => @subcategory.alias, :product => product.alias)%>
	</div>
	<% howelementsinrow += 1%>
	<% if howelementsinrow == 3 && @subcategories.last != subcategory%>
</div>
<br>
<div class="row">
	<% howelementsinrow = 0%>
	<%end%>
<%end%>
</div>