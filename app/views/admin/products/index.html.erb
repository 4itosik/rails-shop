<div class="row">
	<div class="col-xs-12">
	Все товары:
	<table class="table table-bordered table-hover">
		<tr><th>Название</th><th>Цена</th><th></th></tr>
		<% @products.each do |product|%>
		<tr>
			<td><%= link_to product.name, admin_product_path(product)%></td>
			<td><%= product.price%></td>
			<td class="col-xs-3"><%= link_to 'Просмотр', admin_product_path(product), :class => "btn btn-sm btn-info" %>
			<%= link_to 'Редактировать', edit_admin_product_path(product), :class => "btn btn-sm btn-success"%>
			<%= link_to 'Удалить', admin_product_path(product), :method=>:delete, :class=>:destroy, :class => "btn btn-sm btn-danger"%></td>
		</tr>
		<%end%>	
	</table>
	</div>
</div>
<div class="row">
<center><%= will_paginate @products, :class => "apple_pagination", :previous_label => t("<<Предыдущая страница"), :next_label => t("Следующая страница>>") %></center>
</div>
<div class="row">
	<%= link_to 'Создать', new_admin_product_path%>
</div>